{
  "name": "crowdlens",
  "version": "1.0.0",
  "private": true,
  "description": "A web app to share photos from any event",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:frontend": "npm run dev -w apps/frontend",
    "dev:backend": "npm run dev -w apps/backend",
    "build:frontend": "npm run build -w apps/frontend",
    "build:backend": "npm run build -w apps/backend",
    "build": "npm run build:frontend && npm run build:backend",
    "lint": "npm run lint -w apps/frontend",
    "test": "npm run test -w apps/frontend --if-present"
  }
}
